<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:backgroundTint="@color/stand_main"
    android:focusableInTouchMode="true"
    android:transitionName="realTvTransition"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_H_25"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_H_35"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_H_55"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_V_10"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_V_65"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_V_90"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />


    <TextView

        android:id="@+id/tv_real"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alter_stand"
        android:text="@string/frequently_used"
        android:textAlignment="center"
        android:textColor="@color/stand_gray"
        android:textSize="70sp"
        android:transitionName="realTvTransition"
        app:layout_constraintBottom_toBottomOf="@id/guideline_H_35"
        app:layout_constraintLeft_toLeftOf="@id/guideline_V_10"
        app:layout_constraintRight_toRightOf="@id/guideline_V_90"
        app:layout_constraintTop_toTopOf="@id/guideline_H_25" />

    <TextView
        android:id="@+id/tv_D"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alter_stand"
        android:text="d"
        android:textColor="@color/stand_gray"
        android:textSize="70sp"
        android:transitionName="dTvTransition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/guideline_H_35"
        app:layout_constraintLeft_toLeftOf="@id/guideline_V_65"
        app:layout_constraintRight_toRightOf="@id/guideline_V_90"
        app:layout_constraintTop_toTopOf="@id/guideline_H_25" />


    <TextView

        android:id="@+id/et_checkNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alter_stand"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/stand_gray"

        android:textSize="70sp"
        android:transitionName="dTvTransition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/guideline_H_55"
        app:layout_constraintLeft_toLeftOf="@id/guideline_V_10"
        app:layout_constraintRight_toRightOf="@id/guideline_V_90"
        app:layout_constraintTop_toTopOf="@id/guideline_H_35" />

    <TextView
        android:id="@+id/btn_checkNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alter_stand"
        android:text=" real:d"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHint="@color/stand_gray"
        android:textSize="70sp"
        android:transitionName="dTvTransition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/guideline_H_55"
        app:layout_constraintLeft_toLeftOf="@id/guideline_V_10"
        app:layout_constraintRight_toRightOf="@id/guideline_V_90"
        app:layout_constraintTop_toTopOf="@id/guideline_H_35" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_on"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"

        android:textSize="40sp"
        android:text='로그인'
        android:fontFamily="@font/nbp_stand"
        android:textColor="@color/stand_main"
        android:backgroundTint="#FFFFFF"

        app:layout_constraintLeft_toLeftOf="@id/guideline_V_10"
        app:layout_constraintRight_toRightOf="@id/guideline_V_90"
        app:layout_constraintTop_toBottomOf="@id/et_checkNumber"
        >

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>