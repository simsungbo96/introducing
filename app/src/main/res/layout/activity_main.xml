<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stand"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_Real"
        android:layout_width="240dp"
        android:layout_height="63dp"
        android:layout_marginTop="160dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"

        android:fontFamily="@font/alter_stand"
        android:gravity="center"
        android:text="@string/frequently_used"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_D"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="3dp"
        android:textSize="50sp"
        android:fontFamily="@font/alter_stand"
        android:gravity="center"
        android:text="D"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Real"
        app:layout_constraintEnd_toEndOf="@+id/tv_Real"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_Real" />

    <TextView
        android:id="@+id/tv_eveloper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:textSize="30sp"
        android:fontFamily="@font/alter_stand"
        android:gravity="center"
        android:text="eveloper"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>